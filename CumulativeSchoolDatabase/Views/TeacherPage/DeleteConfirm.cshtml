@model CumulativeSchoolDatabase.Models.Teacher

<div id="containershow">
    <nav>
        <a class="navlink" href="/TeacherPage/Show/@Model.TeacherId">Go Back</a>
    </nav>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <h2>Are you sure you want to delete @Model.TeacherFName @Model.TeacherLName?</h2>
    <p>This action cannot be undone.</p>

    <form method="POST" action="/TeacherPage/Delete/@Model.TeacherId">
        <button class="btn btn-danger">
            Confirm Delete
        </button>
    </form>
</div>

